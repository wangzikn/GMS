@{
    ViewData["Title"] = "AddTree";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["SubTitle"] = "THÊM CÂY XANH";
    ViewData["TopBreakCrumb"] = "Cây xanh";
    ViewData["ContentBreakCrumb"] = "Thêm cây xanh";

}


<!-- Droppify CSS -->
<link href="~/assets/node_modules/dropify/dist/css/dropify.min.css" rel="stylesheet">
<!-- Custom CSS -->
<link href="~/dist/css/ancustom.css" rel="stylesheet">
<script src="~/dist/js/notify.js"></script>

<div class="quanli-cayxanh" id="quanli-cayxanh">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="row">
                    <div class="col-lg-4 col-md-4">
                        <div class="card-body">
                            <center>
                                <h4 class=" thongtin">Tải Hình Ảnh Cây</h4>
                            </center>
                            <input type="file" id="input-file-now" class="dropify">
                            @*<input type="file" id="input-file-now-custom-3" class="dropify" data-height="300" data-default-file="./assets/node_modules/dropify/src/images/test-image-2.jpg" />*@
                        </div>
                    </div>
                    <div class="col-lg-8 col-md-8 border-left p-l-0">
                        <center class="p-t-20 p-b-20">
                            <h4 class="thongtin">Thông tin Cây xanh</h4>
                            <div class="card-body">
                                <form class="form">
                                    <div class="form-group row">
                                        <label for="tencay-input" class="col-3 col-form-label tenthongtin">Tên thường gọi</label>
                                        <div class="col-9">
                                            <input class="form-control" type="text" value="" id="tencay-input">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="tentienganh-input" class="col-3 col-form-label tenthongtin">Tên khoa học</label>
                                        <div class="col-9">
                                            <input class="form-control" type="text" value="" id="tentienganh-input">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="dacdiem-hinhthai-input" class="col-12 col-form-label tenthongtin">Mô tả</label>
                                    </div>
                                    <div class="form-group">
                                        <textarea name="dacdiem-hinhthai-input" class="row=" 5" cols="70" col-12 form-control cke" id="dacdiem-hinhthai-input"></textarea>
                                    </div>
                                </form>
                            </div>
                            <button id="save" type="button" class="btn btn-success"><i class="fa fa-check"></i> Lưu</button>
                            <button type="button" class="btn btn-warning"><i class="mdi mdi-close-octagon"></i> Hủy</button>
                        </center>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Ckeditor Js -->
<script src="~/assets/ckeditor/ckeditor.js" type="text/javascript"></script>
<script src="~/dist/js/tree.js"></script>
<script>
    CKEDITOR.replace('dacdiem-hinhthai-input');
</script>


